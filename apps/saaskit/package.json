{
    "name": "svelte-saas-starter-pack",
    "version": "0.0.1",
    "private": true,
    "scripts": {
        "dev": "vite dev",
        "build": "paraglide-js compile --project ./project.inlang --outdir ./src/paraglide && vite build",
        "preview": "vite preview",
        "test": "npm run test:integration && npm run test:unit",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "lint": "prettier --check src/ && eslint src/",
        "format": "prettier --write .",
        "test:integration": "playwright test",
        "test:unit": "vitest",
        "generate": "drizzle-kit generate",
        "migrate": "drizzle-kit migrate",
        "storybook": "storybook dev -p 6006",
        "build-storybook": "storybook build",
        "i18n:watch": "paraglide-js compile --project ./project.inlang --outdir ./src/paraglide --watch",
        "postinstall": "paraglide-js compile --project ./project.inlang --outdir ./src/paraglide"
    },
    "devDependencies": {
        "@chromatic-com/storybook": "^3.2.2",
        "@eslint/js": "^9.13.0",
        "@inlang/paraglide-js": "1.11.3",
        "@playwright/test": "^1.28.1",
        "@storybook/addon-essentials": "^8.4.2",
        "@storybook/addon-interactions": "^8.4.2",
        "@storybook/addon-styling-webpack": "^1.0.1",
        "@storybook/addon-svelte-csf": "^5.0.0-next.11",
        "@storybook/blocks": "^8.4.2",
        "@storybook/svelte": "^8.4.4",
        "@storybook/svelte-vite": "^8.4.4",
        "@storybook/sveltekit": "^8.4.4",
        "@storybook/test": "^8.4.2",
        "@sveltejs/adapter-auto": "^3.0.0",
        "@sveltejs/kit": "^2.0.0",
        "@sveltejs/vite-plugin-svelte": "^4.0.0",
        "@types/eslint": "^8.56.7",
        "@types/node": "^20.14.9",
        "@types/nodemailer": "^6.4.15",
        "@types/uuid": "^10.0.0",
        "autoprefixer": "^10.4.19",
        "drizzle-kit": "^0.22.8",
        "eslint": "^9.0.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-storybook": "^0.11.0",
        "eslint-plugin-svelte": "^2.36.0",
        "globals": "^15.0.0",
        "postcss": "^8.4.38",
        "prettier": "^3.1.1",
        "prettier-plugin-svelte": "^3.1.2",
        "sass": "^1.77.8",
        "storybook": "^8.4.4",
        "storybook-dark-mode": "^4.0.2",
        "storybook-tailwind-dark-mode": "^1.0.22",
        "svelte-check": "^3.6.0",
        "tailwindcss": "^3.4.4",
        "tslib": "^2.4.1",
        "turbo": "^2.3.1",
        "typescript": "^5.0.0",
        "typescript-eslint": "^8.0.0-alpha.20",
        "vite": "^5.0.3",
        "vitest": "^1.2.0"
    },
    "type": "module",
    "dependencies": {
        "@aws-sdk/client-s3": "^3.645.0",
        "@noble/hashes": "^1.5.0",
        "@node-rs/argon2": "^1.8.3",
        "@oslojs/crypto": "^1.0.1",
        "@oslojs/encoding": "^1.1.0",
        "@oslojs/otp": "npm:@oslojs/otp",
        "bits-ui": "^0.21.12",
        "clsx": "^2.1.1",
        "date-fns": "^3.6.0",
        "drizzle-orm": "^0.31.2",
        "effect": "^3.6.1",
        "nodemailer": "^6.9.15",
        "postgres": "^3.4.4",
        "prettier-plugin-tailwindcss": "^0.6.6",
        "redis": "^4.7.0",
        "svelte": "^5",
        "svelte-portal": "^2.2.1",
        "tailwind-merge": "^2.4.0",
        "tailwind-variants": "^0.2.1",
        "quey": "workspace:^",
        "uqr": "npm:uqr",
        "uuid": "^10.0.0",
        "winston": "^3.14.2",
        "zod": "^3.23.8"
    },
    "eslintConfig": {
        "extends": [
            "plugin:storybook/recommended"
        ]
    }
}
